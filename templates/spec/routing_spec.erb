require "rails_helper"
<%
base_route = namespace.nil? ? plural_table_name : namespace + '/' + plural_table_name
controller = namespace.nil? ? plural_table_name : namespace + '_' + plural_table_name
%>
#  - generated from builder/templates/spec/routing_spec.erb
RSpec.describe <%= model_name %>Controller, :type => :routing do
  describe "routing" do

    it "routes to #index" do
      expect(:get => "/<%= base_route %>").to route_to("<%= controller %>#index")
    end

    it "routes to #new" do
      expect(:get => "/<%= base_route %>/new").to route_to("<%= controller %>#new")
    end

    it "routes to #show" do
      expect(:get => "/<%= base_route %>/1").to route_to("<%= controller %>#show", :id => "1")
    end

    it "routes to #edit" do
      expect(:get => "/<%= base_route %>/1/edit").to route_to("<%= controller %>#edit", :id => "1")
    end

    it "routes to #create" do
      expect(:post => "/<%= base_route %>").to route_to("<%= controller %>#create")
    end

    it "routes to #update" do
      expect(:put => "/<%= base_route %>/1").to route_to("<%= controller %>#update", :id => "1")
    end

    it "routes to #destroy" do
      expect(:delete => "/<%= base_route %>/1").to route_to("<%= controller %>#destroy", :id => "1")
    end

  end
end
