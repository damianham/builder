require "rails_helper"

RSpec.describe <%= model_name %>Controller, :type => :routing do
  describe "routing" do

    it "routes to #index" do
      expect(:get => "/<%= plural_table_name %>").to route_to("<%= plural_table_name %>#index")
    end

    it "routes to #new" do
      expect(:get => "/<%= plural_table_name %>/new").to route_to("<%= plural_table_name %>#new")
    end

    it "routes to #show" do
      expect(:get => "/<%= plural_table_name %>/1").to route_to("<%= plural_table_name %>#show", :id => "1")
    end

    it "routes to #edit" do
      expect(:get => "/<%= plural_table_name %>/1/edit").to route_to("<%= plural_table_name %>#edit", :id => "1")
    end

    it "routes to #create" do
      expect(:post => "/<%= plural_table_name %>").to route_to("<%= plural_table_name %>#create")
    end

    it "routes to #update" do
      expect(:put => "/<%= plural_table_name %>/1").to route_to("<%= plural_table_name %>#update", :id => "1")
    end

    it "routes to #destroy" do
      expect(:delete => "/<%= plural_table_name %>/1").to route_to("<%= plural_table_name %>#destroy", :id => "1")
    end

  end
end
